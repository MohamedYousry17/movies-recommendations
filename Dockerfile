# استخدم صورة Node.js الرسمية كأساس
FROM node:18

# تعيين دليل العمل داخل الحاوية
WORKDIR /app

# نسخ ملفات المشروع
COPY package*.json ./

# تثبيت التبعيات
RUN npm install

# نسخ باقي ملفات المشروع
COPY . .

# تعيين المنفذ الذي يعمل عليه التطبيق
EXPOSE 3000

# الأمر الذي يتم تشغيله عند بدء الحاوية
CMD ["npm", "start"]
